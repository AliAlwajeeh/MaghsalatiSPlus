@model IEnumerable<MaghsalatiSPlus.WebMVC.Models.OrderViewModel>
@{
    ViewData["Title"] = "إدارة الطلبات";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>📋 إدارة الطلبات</h3>
    <a asp-action="Create" class="btn btn-primary">➕ إنشاء طلب جديد</a>
</div>

<table class="table table-bordered table-striped text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>رقم الطلب</th>
            <th>اسم العميل</th>
            <th>تاريخ الطلب</th>
            <th>الحالة</th>
            <th>الإجمالي</th>
            <th style="width:200px;">إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.CustomerName</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                    <td>@order.Status</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">عرض</a>
                        <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning btn-sm">تعديل</a>
                        <form asp-action="DeleteConfirmed" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@order.Id" />
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('هل أنت متأكد من الحذف؟');">
                                حذف
                            </button>
                        </form>

                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6" class="text-muted">لا توجد طلبات حالياً</td></tr>
        }
    </tbody>
</table>
