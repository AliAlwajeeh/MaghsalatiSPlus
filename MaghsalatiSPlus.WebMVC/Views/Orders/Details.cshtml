@model MaghsalatiSPlus.WebMVC.Models.OrderViewModel
@{
    ViewData["Title"] = "تفاصيل الطلب";
    Layout = "_Layout";
}

<h3>📄 تفاصيل الطلب</h3>
<hr />

<dl class="row">
    <dt class="col-sm-3">رقم الطلب</dt>
    <dd class="col-sm-9">@Model.Id</dd>

    <dt class="col-sm-3">العميل</dt>
    <dd class="col-sm-9">@Model.CustomerName</dd>

    <dt class="col-sm-3">التاريخ</dt>
    <dd class="col-sm-9">@Model.OrderDate.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-3">الحالة</dt>
    <dd class="col-sm-9">@Model.Status</dd>

    <dt class="col-sm-3">الإجمالي</dt>
    <dd class="col-sm-9">@Model.TotalAmount</dd>
</dl>

<h5>🛒 العناصر:</h5>
<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>العنصر</th>
            <th>الكمية</th>
            <th>السعر</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">تعديل</a>
<a asp-action="Index" class="btn btn-secondary">رجوع</a>
