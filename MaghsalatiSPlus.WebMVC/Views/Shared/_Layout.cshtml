@{
    var title = ViewData["Title"] ?? "مغسلتي اس بلس";
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - مغسلتي اس بلس</title>

   
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css">

    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">🧺 مغسلتي اس بلس</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="navbarNav" class="collapse navbar-collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">🏠 الرئيسية</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Orders" asp-action="Index">📋 الطلبات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Customers" asp-action="Index">👥 العملاء</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Categories" asp-action="Index">📂 الأقسام</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- المحتوى الرئيسي -->
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- التذييل -->
    <footer class="border-top footer text-muted mt-4">
        <div class="container text-center py-2">
            &copy; @DateTime.Now.Year - مغسلتي اس بلس 🚿 | تم التطوير بواسطة Dev.Ali
        </div>
    </footer>

    <!-- ملفات JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script> <!-- تأكد من وجود jQuery في wwwroot/lib -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- مساحة لأي سكربت إضافي من الصفحات -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
