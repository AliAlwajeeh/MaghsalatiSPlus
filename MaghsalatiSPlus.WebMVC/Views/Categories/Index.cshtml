@model IEnumerable<MaghsalatiSPlus.WebMVC.Models.CategoryViewModel>
@{
    ViewData["Title"] = "قائمة الأقسام";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>📂 قائمة الأقسام</h3>
    <a asp-action="Create" class="btn btn-primary">➕ إضافة قسم</a>
</div>

@if (TempData["Success"] is string s)
{
    <div class="alert alert-success">@s</div>
}
@if (TempData["Error"] is string e)
{
    <div class="alert alert-danger">@e</div>
}

<table class="table table-bordered table-striped text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>م</th>
            <th>اسم القسم</th>
            <th style="width:220px;">إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@index++</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">عرض</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">تعديل</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="3" class="text-muted">لا توجد أقسام مسجلة</td></tr>
        }
    </tbody>
</table>
